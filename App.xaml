<Application x:Class="FlashMemo.App"
            xmlns:vm="clr-namespace:FlashMemo.ViewModel.Windows"
            xmlns:view="clr-namespace:FlashMemo.View"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:local="clr-namespace:FlashMemo"
            StartupUri="View/MainWindow.xaml">
    
    <Application.Resources>
        
        <!-- ===== ViewModel → View Mapping ===== -->

        <DataTemplate DataType="{x:Type vm:DecksVM}">
            <view:DecksUC />
        </DataTemplate>


        <!-- ===== Colors ===== -->
        <!--#region Navigation bar colors -->
        
        <Color x:Key="NavBgColor">#2A2E34</Color>
        <Color x:Key="NavHoverColor">#343A40</Color>
        <Color x:Key="NavPressedColor">#1F6FEB</Color>
        <Color x:Key="NavBorderColor">#0279b0</Color>
        <Color x:Key="NavTextColor">#E6EDF3</Color>

        <SolidColorBrush x:Key="NavBgBrush" Color="{StaticResource NavBgColor}" />
        <SolidColorBrush x:Key="NavHoverBrush" Color="{StaticResource NavHoverColor}" />
        <SolidColorBrush x:Key="NavPressedBrush" Color="{StaticResource NavPressedColor}" />
        <SolidColorBrush x:Key="NavBorderBrush" Color="{StaticResource NavBorderColor}" />
        <SolidColorBrush x:Key="NavTextBrush" Color="{StaticResource NavTextColor}" />
        
        <!--#endregion-->
        
        <!--#region Deck Tree Colors --> 

        <Color x:Key="DeckRowHoverColor">#2A2A2A</Color>
        <Color x:Key="DeckTextColor">#FFFFFF</Color>
        <Color x:Key="DeckNewColor">#7AA2F7</Color>
        <Color x:Key="DeckLearnColor">#F7768E</Color>
        <Color x:Key="DeckDueColor">#9ECE6A</Color>
        <Color x:Key="DeckDimColor">#AAAAAA</Color>

        <SolidColorBrush x:Key="DeckRowHoverBrush" Color="{StaticResource DeckRowHoverColor}" />
        <SolidColorBrush x:Key="DeckTextBrush" Color="{StaticResource DeckTextColor}" />
        <SolidColorBrush x:Key="DeckNewBrush" Color="{StaticResource DeckNewColor}" />
        <SolidColorBrush x:Key="DeckLearnBrush" Color="{StaticResource DeckLearnColor}" />
        <SolidColorBrush x:Key="DeckDueBrush" Color="{StaticResource DeckDueColor}" />
        <SolidColorBrush x:Key="DeckDimBrush" Color="{StaticResource DeckDimColor}" />

        <!--#endregion -->

        <!-- ===== Navigation Buttons Style ===== -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource NavBgBrush}" />
            <Setter Property="Foreground" Value="{StaticResource NavTextBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource NavBorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="14,6" />
            <Setter Property="Height" Value="40" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Focusable" Value="False" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource NavHoverBrush}" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource NavPressedBrush}" />
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Vertical Separator ===== -->
        <Style x:Key="NavSeparatorStyle" TargetType="Border">
            <Setter Property="Width" Value="1" />
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="Background" Value="{StaticResource NavBorderBrush}" />
            <Setter Property="Opacity" Value="0.6" />
        </Style>

        <!-- OPTIONS BUTTON STYLE -->

        <Style x:Key="DeckOptionsButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource DeckDimBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- TREEVIEW ITEM STYLE -->

        <Style x:Key="DeckTreeItemStyle" TargetType="TreeViewItem">
            <Setter Property="IsExpanded"
            Value="{Binding IsExpanded, Mode=TwoWay}" />
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="2"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>
                            <Border x:Name="Row"
                            Padding="6"
                            CornerRadius="8"
                            Background="Transparent">

                                <ContentPresenter/>
                            </Border>

                            <ItemsPresenter Margin="20,2,0,2"/>
                        </StackPanel>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Row"
                                Property="Background"
                                Value="{StaticResource DeckRowHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Application.Resources>
</Application>
