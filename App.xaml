<Application x:Class="FlashMemo.App"
            xmlns:vm="clr-namespace:FlashMemo.ViewModel.Windows"
            xmlns:view="clr-namespace:FlashMemo.View"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:helpers="clr-namespace:FlashMemo.Helpers"
            xmlns:popups="clr-namespace:FlashMemo.ViewModel.Popups"
            xmlns:local="clr-namespace:FlashMemo">

    <Application.Resources>
        
        <!-- Converters -->
        <helpers:NullToVisConverter
            x:Key="NullToVisConverter"/>

        <helpers:BoolToVisConverter
            x:Key="BoolToVisConverter"/>

        <helpers:InverseBoolConverter
            x:Key="InverseBoolConverter"/>

        <helpers:InverseBoolToVisConverter
            x:Key="InverseBoolToVisConverter"/>
            
        <helpers:TimeSpanHumanizer
            x:Key="TimeSpanHumanizer"/>

        <helpers:XamlToTextConverter
            x:Key="XamlToTextConverter"/>

            <!-- ===== ViewModel → View Mapping ===== -->

        <DataTemplate DataType="{x:Type vm:DecksVM}">
            <view:DecksUC />
        </DataTemplate>

        <DataTemplate DataType="{x:Type popups:DeckSelectVM}">
            <view:DeckSelectUC/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ReviewVM}">
            <view:ReviewUC/>
        </DataTemplate>

        <!-- ===== Colors ===== -->
        <!--#region Navigation bar colors -->
        
        <Color x:Key="NavBgColor">#2A2E34</Color>
        <Color x:Key="NavHoverColor">#343A40</Color>
        <Color x:Key="NavPressedColor">#1F6FEB</Color>
        <Color x:Key="NavBorderColor">#0279b0</Color>
        <Color x:Key="NavTextColor">#E6EDF3</Color>

        <SolidColorBrush x:Key="NavBgBrush" Color="{StaticResource NavBgColor}" />
        <SolidColorBrush x:Key="NavHoverBrush" Color="{StaticResource NavHoverColor}" />
        <SolidColorBrush x:Key="NavPressedBrush" Color="{StaticResource NavPressedColor}" />
        <SolidColorBrush x:Key="NavBorderBrush" Color="{StaticResource NavBorderColor}" />
        <SolidColorBrush x:Key="NavTextBrush" Color="{StaticResource NavTextColor}" />
        
        <!--#endregion-->
        
        <!--#region Deck Tree Colors --> 

        <Color x:Key="DeckRowHoverColor">#2A2A2A</Color>
        <Color x:Key="DeckTextColor">#FFFFFF</Color>
        <Color x:Key="DeckNewColor">#7AA2F7</Color>
        <Color x:Key="DeckLearnColor">#F7768E</Color>
        <Color x:Key="DeckDueColor">#9ECE6A</Color>
        <Color x:Key="DeckDimColor">#AAAAAA</Color>

        <SolidColorBrush x:Key="DeckRowHoverBrush" Color="{StaticResource DeckRowHoverColor}" />
        <SolidColorBrush x:Key="DeckTextBrush" Color="{StaticResource DeckTextColor}" />
        <SolidColorBrush x:Key="DeckNewBrush" Color="{StaticResource DeckNewColor}" />
        <SolidColorBrush x:Key="DeckLearnBrush" Color="{StaticResource DeckLearnColor}" />
        <SolidColorBrush x:Key="DeckDueBrush" Color="{StaticResource DeckDueColor}" />
        <SolidColorBrush x:Key="DeckDimBrush" Color="{StaticResource DeckDimColor}" />

        <!--#endregion -->

        <!-- ===== Create Editor colors ===== -->
        <Color x:Key="EditorFieldColor">#CC2A2E34</Color>
        <SolidColorBrush x:Key="EditorFieldBrush" Color="{StaticResource DeckRowHoverColor}"/>

        <!-- ===== Navigation Buttons Style ===== -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource NavBgBrush}" />
            <Setter Property="Foreground" Value="{StaticResource NavTextBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource NavBorderBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="14,6" />
            <Setter Property="Height" Value="40" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Focusable" Value="False" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource NavHoverBrush}" />
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource NavPressedBrush}" />
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4" />
                                <Setter Property="Cursor" Value="Arrow" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Vertical Separator ===== -->
        <Style x:Key="NavSeparatorStyle" TargetType="Border">
            <Setter Property="Width" Value="1" />
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="Background" Value="{StaticResource NavBorderBrush}" />
            <Setter Property="Opacity" Value="0.6" />
        </Style>

        <!-- OPTIONS BUTTON STYLE -->

        <Style x:Key="DeckOptionsButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource DeckDimBrush}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- TREEVIEW ITEM STYLE -->

        <Style x:Key="DeckTreeItemStyle" TargetType="TreeViewItem">

            <!-- Force normal row height -->
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>

            <Setter Property="IsExpanded"
            Value="{Binding IsExpanded, Mode=TwoWay}" />

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeViewItem">
                        <StackPanel>

                            <!-- Row -->
                            <Border
                                x:Name="Row"
                                Padding="8"
                                CornerRadius="8"
                                Background="Transparent"
                                MinHeight="36">

                                <ContentPresenter
                                    ContentSource="Header"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch"/>
                            </Border>

                            <!-- Children -->
                            <ItemsPresenter
                                Margin="20,2,0,2"/>

                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter
                                    TargetName="Row"
                                    Property="Background"
                                    Value="{StaticResource DeckRowHoverBrush}"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter
                                    TargetName="Row"
                                    Property="Background"
                                    Value="#402A82DA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enter Name Popup -->

        <DataTemplate DataType="{x:Type popups:EnterNameVM}">

            <Border
                Width="320"
                Padding="20"
                Background="#FF1E1E1E"
                CornerRadius="12"
                BorderBrush="{StaticResource NavBorderBrush}"
                BorderThickness="2">

                <StackPanel>

                    <!-- Title -->
                    <TextBlock
                        Text="Create New Deck"
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Margin="0,0,0,12"
                        HorizontalAlignment="Center"/>

                    <!-- Input -->
                    <TextBox
                        Text="{Binding NameField, UpdateSourceTrigger=PropertyChanged}"
                        Height="34"
                        FontSize="16"
                        Margin="0,0,0,16"
                        VerticalContentAlignment="Center"/>

                    <!-- Buttons -->
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                        <!-- Confirm -->
                        <Button
                            Content="Create"
                            Command="{Binding ConfirmCommand}"
                            Style="{StaticResource NavButtonStyle}"
                            Width="90"/>

                        <!-- Cancel -->
                        <Button
                            Content="Cancel"
                            Command="{Binding CloseCommand}"
                            Style="{StaticResource NavButtonStyle}"
                            Width="90"
                            Margin="10,0,0,0"/>

                    </StackPanel>

                </StackPanel>

            </Border>

        </DataTemplate>

        <Style x:Key="ReviewAnswerButtonStyle"
            TargetType="Button"
            BasedOn="{StaticResource NavButtonStyle}">

            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Width" Value="100"/>
            
            <Setter Property="Visibility" Value="{Binding IsEnabled,
                RelativeSource={RelativeSource Self}, 
                Converter={StaticResource BoolToVisConverter}}"/>
        </Style>

        <DataTemplate x:Key="HistoryContextItemTemplate">

            <Button
                Height="34"
                Padding="8,0"
                HorizontalContentAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                Foreground="White"

                Command="{Binding DataContext.ShowEditFromHistoryCommand,
                    RelativeSource={RelativeSource AncestorType=ContextMenu}}"

                CommandParameter="{Binding}">

                <TextBlock
                    Text="{Binding FrontContent,
                        Converter={StaticResource XamlToTextConverter}}"
                    TextWrapping="NoWrap"
                    TextTrimming="CharacterEllipsis"/>

            </Button>

        </DataTemplate>

        <!-- Options Panel Card -->
        <Style x:Key="OptionsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF2A2E34"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BorderBrush" Value="{StaticResource NavBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Options Section Title -->
        <Style x:Key="OptionsSectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Options Label -->
        <Style x:Key="OptionsLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Options TextBox -->
        <Style x:Key="OptionsTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

    </Application.Resources>
</Application>
