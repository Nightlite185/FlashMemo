<UserControl x:Class="FlashMemo.View.DeckSelectUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:popups="clr-namespace:FlashMemo.ViewModel.Popups" xmlns:d="http://schemas.microsoft.com/expression/blend/2008">

    <Border
        Width="420"
        Height="500"
        Padding="16"
        Background="#FF1E1E1E"
        CornerRadius="14"
        BorderBrush="{StaticResource NavBorderBrush}"
        BorderThickness="2">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock
                Text="Choose Deck"
                FontSize="22"
                FontWeight="SemiBold"
                Foreground="White"
                HorizontalAlignment="Center"
                Margin="0,0,0,12"/>

            <!-- Tree -->
            <TreeView
                x:Name="DeckTree"
                KeyDown="DeckTree_KeyDown"
                Grid.Row="1"
                ItemsSource="{Binding DeckTree}"
                Background="#FF1E1E1E">

                <TreeView.ItemContainerStyle>
                    <Style
                        TargetType="TreeViewItem"
                        BasedOn="{StaticResource DeckTreeItemStyle}">

                        <EventSetter
                            Event="MouseDoubleClick"
                            Handler="TreeViewItem_DoubleClick"/>

                    </Style>
                </TreeView.ItemContainerStyle>

                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">

                        <TextBlock
                            Text="{Binding Name}"
                            Foreground="{StaticResource DeckTextBrush}"
                            FontSize="16"
                            VerticalAlignment="Center"/>

                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>

            </TreeView>


            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,14,0,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Content="Cancel"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource NavButtonStyle}"
                    Width="90"/>

                <Button
                    Grid.Column="2"
                    Content="Choose"
                    Command="{Binding ConfirmCommand}"
                    Style="{StaticResource NavButtonStyle}"
                    Width="90"/>

            </Grid>

        </Grid>

    </Border>

</UserControl>
