<UserControl x:Class="FlashMemo.View.DecksUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlashMemo.View" 
             xmlns:windows="clr-namespace:FlashMemo.ViewModel.Windows" 
             xmlns:helpers="clr-namespace:FlashMemo.Helpers"
             x:Name="Root"
             d:DataContext="{d:DesignInstance Type=windows:DecksVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MouseDown="Root_MouseDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF000912"/>
                <GradientStop Color="#FF0053A0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Empty message -->
        <TextBlock
            Grid.Row="0"
            Text="You dont have any decks. Time to create one!"
            FontSize="26"
            FontWeight="SemiBold"
            Foreground="White"
            Opacity="0.7"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>

                    <Style.Triggers>

                        <!-- Show when DeckTree.Count == 0 -->
                        <DataTrigger
                            Binding="{Binding DeckTree.Count}"
                            Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </TextBlock.Style>

        </TextBlock>


        <!-- Deck list -->
        <TreeView
            Name="DeckTree"
            Grid.Row="0"
            ItemsSource="{Binding DeckTree}"
            SelectedItemChanged="DeckTree_SelectedChanged"
            KeyDown="DeckTree_KeyDown"
            Background="Transparent"
            BorderThickness="0">

            <TreeView.ItemContainerStyle>
                <Style
                    TargetType="TreeViewItem"
                    BasedOn="{StaticResource DeckTreeItemStyle}">

                    <EventSetter
                        Event="MouseDoubleClick"
                        Handler="TreeViewItem_DoubleClick"/>

                </Style>
            </TreeView.ItemContainerStyle>


            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="34" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="32" />
                        </Grid.ColumnDefinitions>

                        <ToggleButton
                            Grid.Column="0"
                            Style="{StaticResource DeckExpandToggleStyle}"
                            IsChecked="{Binding IsExpanded, Mode=TwoWay}"/>

                        <Grid Grid.Column="1">
                            <TextBlock
                                Text="{Binding Name}"
                                FontSize="18"
                                FontWeight="DemiBold"
                                Foreground="{StaticResource DeckTextBrush}"
                                VerticalAlignment="Center"
                                Visibility="{Binding IsRenaming,
                                            Converter={StaticResource InverseBoolToVisConverter}}"/>

                            <TextBox
                                Text="{Binding TempName, UpdateSourceTrigger=PropertyChanged}"
                                FontSize="18"
                                Height="30"
                                Width="300"
                                Background="Transparent"
                                Foreground="White"
                                CaretBrush="White"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                HorizontalAlignment="Left"
                                Visibility="{Binding IsRenaming,
                                            Converter={StaticResource BoolToVisConverter}}"
                                KeyDown="RenameBox_KeyDown"
                                LostFocus="RenameBox_LostFocus"
                                LostKeyboardFocus="RenameBox_LostFocus"
                                IsVisibleChanged="RenameBox_IsVisibleChanged"/>
                        </Grid>

                        <TextBlock
                            Grid.Column="2"
                            Text="{Binding LessonsCount}"
                            FontSize="18"
                            Foreground="{StaticResource DeckNewBrush}"
                            HorizontalAlignment="Center"/>

                        <TextBlock
                            Grid.Column="3"
                            Text="{Binding LearningCount}"
                            FontSize="18"
                            Foreground="{StaticResource DeckLearnBrush}"
                            HorizontalAlignment="Center"/>

                        <TextBlock
                            Grid.Column="4"
                            Text="{Binding ReviewsCount}"
                            FontSize="18"
                            Foreground="{StaticResource DeckDueBrush}"
                            HorizontalAlignment="Center"/>

                        <Button
                            Grid.Column="5"
                            Content="⚙"
                            Style="{StaticResource DeckOptionsButtonStyle}"
                            Click="DeckCtxButton_Click">
                            <Button.Visibility>
                                <Binding
                                    Path="IsMouseOver"
                                    RelativeSource="{RelativeSource AncestorType=TreeViewItem}"
                                    Converter="{StaticResource BoolToVisConverter}"/>
                            </Button.Visibility>

                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        Header="Rename"
                                        Command="{Binding PlacementTarget.DataContext.BeginRenameCommand, 
                                            RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>

                                    <MenuItem
                                        Header="Options"
                                        Command="{Binding DataContext.ShowDeckOptionsCommand, Source={x:Reference Root}}"
                                        CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>

                                    <MenuItem
                                        Header="Create sub-deck"
                                        Command="{Binding DataContext.ShowCreateDeckCommand, Source={x:Reference Root}}"
                                        CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Separator/>
                                    
                                    <MenuItem
                                        Header="Delete"
                                        Command="{Binding DataContext.RemoveDeckCommand, Source={x:Reference Root}}"
                                        CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                </ContextMenu>
                            </Button.ContextMenu>

                        </Button>
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Sync Decks Button -->
        <Button
            Grid.Row="1"
            Content="Sync decks"
            Command="{Binding SyncDecksCommand}"
            Style="{StaticResource NavButtonStyle}"
            Width="110"
            Height="45"
            HorizontalAlignment="Center"
            Margin="0,0,150,20"/>
        
        <!-- Create Deck Button -->
        <Button
            Grid.Row="1"
            Content="Create Deck"
            Command="{Binding ShowCreateDeckCommand}"
            Style="{StaticResource NavButtonStyle}"
            Width="120"
            Height="45"
            HorizontalAlignment="Center"
            Margin="150,0,0,20"/>

        <!-- Popup Overlay -->
        <Grid
            Grid.RowSpan="2"
            Background="#80000000"
            Visibility="{Binding CurrentPopup,
                Converter={StaticResource NullToVisConverter}}">

            <!-- Popup content -->
            <ContentControl
            Content="{Binding CurrentPopup}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        </Grid>


    </Grid>
</UserControl>
